.section
  .row
    .col.s11.center-align
      h5 ORGANIZATIONS
    .col.s1.center-align
      a.btn-floating.waves-effect.waves-light.modal-trigger href="#createOrgModal"
        i.material-icons add

  ul.collection
    - @orgs.each do |org|
      li.collection-item
        div
          | #{org[:name]}
          a.secondary-content href="/orgs/#{org[:subdomain]}" 
            i.material-icons send

include views/orgs/create-org-modal